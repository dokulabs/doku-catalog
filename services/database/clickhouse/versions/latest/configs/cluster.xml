<clickhouse>
    <remote_servers>
        <cluster>
            <shard>
                <internal_replication>false</internal_replication>
                <replica>
                    <host>clickhouse</host>
                    <port>9000</port>
                </replica>
            </shard>
        </cluster>
    </remote_servers>

    <!-- Zookeeper configuration -->
    <zookeeper>
        <node>
            <host>zookeeper</host>
            <port>2181</port>
        </node>
    </zookeeper>

    <!-- Macros for replication -->
    <macros>
        <shard>01</shard>
        <replica>01</replica>
    </macros>
</clickhouse>
